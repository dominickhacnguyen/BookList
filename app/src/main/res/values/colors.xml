<resources>
    <!-- Primary color of the app (shown in the app bar) -->
    <color name="colorPrimary">#2B3D4D</color>

    <!-- Primary dark color of the app (shown in the status bar) -->
    <color name="colorPrimaryDark">#23303D</color>

    <!-- Accent color of the app -->
    <color name="colorAccent">#10CAC9</color>

    <!-- Text color for the title of the book in the list item -->
    <color name="textColorBookTitle">#FFFFFF</color>

    <!-- Text color for the authors of the book in the list item -->
    <color name="textColorBookAuthor">#B4BAC0</color>

    <!-- Color for an book with rating between 0 and 1 -->
    <color name="rating1">#ED3F0C</color>

    <!-- Color for an book with rating between 1 and 2 -->
    <color name="rating2">#ED970C</color>

    <!-- Color for an book with rating between 2 and 3 -->
    <color name="rating3">#EAED0C</color>

    <!-- Color for an book with rating between 3 and 4 -->
    <color name="rating4">#8BED0C</color>

    <!-- Color for an book with rating between 4 and 5 -->
    <color name="rating5">#0CED2D</color>

</resources>
