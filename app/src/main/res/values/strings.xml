    <!-- Title for the application. [CHAR LIMIT=12] -->
    <string name="app_name">Book List</string>

    <string name="search">Search</string>
    <string name="editSearch">Enter a search term here</string>
    <!-- Text to display in the list when there are no books [CHAR LIMIT=NONE] -->
    <string name="no_books">No books found. :(\nType in a title to get started.</string>

    <!-- Error message when there is no internet connectivity [CHAR LIMIT=NONE] -->
    <string name="no_internet_connection">No internet connection.</string>

    <!-- Unknown field string -->
    <string name="unknown">Unknown</string>

